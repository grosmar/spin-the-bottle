<?xml version='1.0' encoding='utf-8'?>
<widget id="r7d.spinthebottle" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Spin the Bottle - noAds</name>
    <description>
        Simple Spin the Bottle game, where you can rotate a bottle by swiping.
    </description>
    <author email="info@r7d.org" href="http://r7d.org">
        R7D Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="Orientation" value="landscape" />
    <preference name="BackgroundColor" value="0xff000000" />
    <preference name="Fullscreen" value="true" />
    <icon src="res/icon/icon.png" />
    <engine name="android" spec="^6.2.3" />
    <engine name="ios" spec="^4.4.0" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
</widget>
